<div class="mt-20 px-4">
     <h1 class="mb-10 text-center text-3xl">{{ section.settings.title }}</h1>

     <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 ">
          {% assign product = all_products[section.settings.recommendation_product] %}
          {% if product.featured_image != blank %}
          {% render 'product-card', product_product: product %}

          {% else %}
          {% render 'product-card-placeholder' %}
          {% endif %}


          <div class="grid gap-y-4 p-4 md:gap-y-0">
               <h2 class="text-4xl">{{ product.title }}</h2>
               <div class="">{{ product.description }}</div>
               <button class="bg-green-600 hover:bg-green-700 transition rounded-lg w-24 h-14 py-2">
                    <a class="text-white" href="{{ product.url }}">{{ section.settings.button_label }}</a>
               </button>
          </div>
     </div>
</div>
{% schema %}
{
"name": "オススメ商品",
"settings": [
{
"type": "text",
"id": "title",
"default": "オススメ商品",
"label": "タイトル"
},
{
"type": "text",
"id": "button_label",
"info": "ボタンのラベルのインフォメーション",
"label": "ボタンのラベル",
"default": "ボタン"


},
{
"type": "product",
"id": "recommendation_product",
"label": "商品を選択"
}
],
"presets": [
{
"name": "オススメ商品"
}
]
}
{% endschema %}