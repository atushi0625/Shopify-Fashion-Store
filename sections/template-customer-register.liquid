<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">新規アカウント登録</h1>
        </div>
        <div class="mt-8">
            {% form 'create_customer' %}
            {% if form.errors %}
            <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                <strong class="font-bold">エラー!</strong>
                <p class="block sm:inline">{{ form.errors | default_errors }}</p>
            </div>
            {% endif %}

            <div class="my-2">
                <label for="first_name" class="sr-only">苗字</label>
                <input type="text" name="customer[first_name]" id="first_name" autocomplete="given-name" class="relative block w-full px-3 py-2 border" placeholder="苗字">
            </div>

            <div class="my-2">
                <label for="last_name" class="sr-only">名前</label>
                <input type="text" name="customer[last_name]" id="last_name" autocomplete="family-name" class="relative block w-full px-3 py-2 border" placeholder="名前">
            </div>

            <div class="my-2">
                <label for="birthday" class="sr-only">生年月日</label>
                <input type="date" name="customer[note][Birthday]" id="birthday" class="relative block w-full px-3 py-2 border">
            </div>

            <div class="my-2">
                <label for="email_address" class="sr-only">メールアドレス</label>
                <input type="email" name="customer[email]" id="email_address" autocomplete="email" class="relative block w-full px-3 py-2 border" placeholder="メールアドレス">
            </div>


            <div class="my-2">
                <label for="password" class="sr-only">パスワード</label>
                <input type="password" name="customer[password]" id="password" autocomplete="new-password" class="relative block w-full px-3 py-2 border" placeholder="パスワード">
            </div>

            <div>
                <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
                    アカウントを作成する
                </button>
            </div>
            {% endform %}
        </div>
    </div>
</div>