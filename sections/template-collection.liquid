<div class="px-4 py-8">
    <a href="{{ routes.collections_url }}" class="text-base text-gray-500 hover:underline text-center block my-4">コレクションリストに戻る</a>
    {% paginate collection.products by section.settings.number_of_products_per_page %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>

    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for product in collection.products %}
            {% render 'product-card', product_product: product %}
            {% else %}
            <p>このコレクションにその商品は含まれていません</p>
            {% endfor %}
        </div>
    </div>


    {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>

{% schema %}
{
"name": "コレクションテンプレート",
"settings": [
{
"type": "number",
"id": "number_of_products_per_page",
"default": 6,
"label": "1ページあたりの商品数"
}
]
}
{% endschema %}